<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ResourceName">

    <root-path name="wwx_root" path="" />

    <!--1、对应内部内存卡根目录：Context.getFileDir()-->
    <files-path name="wwx_app_path" path="."/>

    <!--2、对应应用默认缓存根目录：Context.getCacheDir()-->
    <cache-path name="wwx_app_cache" path="wwx/cache/"/>

    <!--3、对应外部内存卡根目录：Environment.getExternalStorageDirectory()-->
    <external-path name="wwx_app_root" path="wwx/common/" />

    <!--4、对应外部内存卡根目录下的APP公共目录：Context.getExternalFileDir(String)-->
    <external-files-path name="wwx_app_public" path="wwx/public/" />

    <!--5、对应外部内存卡根目录下的APP缓存目录：Context.getExternalCacheDir()-->
    <external-cache-path name="wwx_app_cache" path="wwx/cache/" />


</paths>